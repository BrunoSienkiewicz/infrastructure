[Unit]
Description=Docker image registry
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/bruno/infrastructure/docker-registry
ExecStart=/bin/bash -c "docker compose -f docker-compose.yml up --detach"
ExecStop=/bin/bash -c "docker compose -f docker-compose.yml stop"

[Install]
WantedBy=multi-user.target
